<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_card_map_title_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{minutes} "
                    android:textColor="#2c9925"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_card_map_title_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_card_map_title_minutes"
                    android:text="to {destination}"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_card_map_subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_card_map_title_minutes"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:singleLine="false"
                    android:text="{congestion level} traffic on {street}"
                    android:textColor="#bbbbbb"
                    android:textSize="16sp" />

                <!-- TODO: Change this icon to the correct one -->
                <ImageButton
                    android:id="@+id/ib_map_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_setting_light"/>

            </RelativeLayout>

            <fragment
                android:id="@+id/card_map_frag"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- TODO: Change this icon to the correct one -->
                <TextView
                    android:id="@+id/tv_card_map_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_setting_light"
                    android:drawablePadding="4dp"
                    android:text="Navigate / "
                    android:textColor="#307ee1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_card_map_nav_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_card_map_nav"
                    android:text="{minutes} "
                    android:textColor="#307ee1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_card_map_nav_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_card_map_nav_minutes"
                    android:text="via {street}"
                    android:textColor="#307ee1"
                    android:textSize="18sp" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>