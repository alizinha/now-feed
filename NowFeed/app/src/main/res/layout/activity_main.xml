<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- alarms card-->

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Card_View"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                card_view:cardCornerRadius="1dp">

                <!--todo: fix layout UI  -->

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:text="Set Alarm: "
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TimePicker
                        android:id="@+id/time_picker"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- might not be necessary unless timepicker is moved to dialog box -->
                    <Button
                        android:id="@+id/select_time_button"
                        android:text="select time"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <!-- might remove since it shows only military time -->
                    <TextView
                        android:id="@+id/select_time_text_view"
                        android:text="Select time: 12:00 AM"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <Button
                        android:id="@+id/set_alarm_button"
                        android:text="set alarm"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <!--todo: create image button with clock to view alarms -->
                    <Button
                        android:id="@+id/view_alarms_button"
                        android:text="View Alarms"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />


                    <!--displays next upcoming alarm -->
                    <TextView
                        android:id="@+id/alarms_text_view"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />


                    <!-- might not need listView if only next alarm will show -->
                    <ListView
                        android:id="@+id/alarms_list_view"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--maps card -->

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_maps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_card_map_title_minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{minutes} "
                            android:textColor="#2c9925"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_card_map_title_destination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_card_map_title_minutes"
                            android:text="to {destination}"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_card_map_subhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_card_map_title_minutes"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="8dp"
                            android:singleLine="false"
                            android:text="{congestion level} traffic on {street}"
                            android:textColor="#bbbbbb"
                            android:textSize="16sp" />

                        <!-- TODO: Change this icon to the correct one -->
                        <ImageButton
                            android:id="@+id/ib_map_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_setting_light" />

                    </RelativeLayout>


                    <fragment
                        android:id="@+id/card_map_frag"
                        android:name="com.google.android.gms.maps.MapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="16dp" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!-- TODO: Change this icon to the correct one -->
                        <TextView
                            android:id="@+id/tv_card_map_directions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_setting_light"
                            android:drawablePadding="4dp"
                            android:text="Get directions"
                            android:textColor="#307ee1"
                            android:textSize="18sp" />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


    <!--<ListView-->
    <!--android:id="@+id/card_list_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"/>-->


</LinearLayout>
